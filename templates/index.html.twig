{%  extends 'base.html.twig' %}

{% import "_macros.html.twig" as macros %}

{% block main_title %}
    {%- if route -%}
        {{ attribute(stations.stations, from).displayName }} →  {{ attribute(stations.stations, to).displayName }}&nbsp;&middot;&nbsp;
    {%- endif -%}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var routes = {
            'get_players': '{{ path('zeps.api.logged_in_players', {'world_names': app.config.overworld_and_nether_worlds|join(',')}) }}',
            'get_nearest': '{{ path('zeps.api.nearest_station', {'name': 'playerNamePlaceholder'}) }}',
            'get_head': '{{ path('zeps.player_head', {'name': 'playerNamePlaceholder'}) }}',
            'get_length': '{{ path('zeps.api.route_length', {'from_id': 'from_id_placeholder', 'to_id': 'to_id_placeholder', 'official': 'official_placeholder', 'accessible': 'accessible_placeholder'}) }}',
            'public_search_results': '{{ path('zeps.search_results', {'from': 'from_placeholer', 'to': 'to_placeholder', 'options': 'options_placeholder'}) }}'
        };

        var nether_world = '{{ app.config.world_name_nether }}';
    </script>

    <script type="text/javascript" src="{{ static('/dist/vendor.min.js') }}"></script>
    <script type="text/javascript" src="{{ static('/dist/zeps-gui.min.js') }}"></script>
{% endblock %}

{% block content %}
    {% if not error or error != 'unreachable' %}
        <div class="container-fullscreen">
            <aside class="home-search-form">
                <form action="{{ path('zeps.homepage') }}" id="search-form">
                    <header>
                        <h1><a href="{{ path('zeps.homepage') }}">Z<em>é</em>PS</a></h1>
                        <ul>
                            <li title="Stations officielles uniquement" class="tooltip is-tooltip-bottom" data-tooltip="Stations officielles uniquement">
                                <input type="checkbox" name="official" id="options_official"{% if options.official %} checked="checked"{% endif %} />
                                <label for="options_official">
                                    <span class="fa fa-check fa-lg" aria-hidden="true"></span>
                                    <span class="sr-only">Stations officielles uniquement</span>
                                </label>
                            </li>
                            <li title="Stations sécurisées uniquement" class="tooltip is-tooltip-bottom" data-tooltip="Stations sécurisées uniquement">
                                <input type="checkbox" name="accessible" id="options_secure"{% if options.accessible %} checked="checked"{% endif %} />
                                <label for="options_secure">
                                    <span class="fa fa-lock fa-lg" aria-hidden="true"></span>
                                    <span class="sr-only">Stations sécurisées uniquement</span>
                                </label>
                            </li>
                        </ul>
                    </header>
                    <div>
                        <input
                            type="text"
                            name="from"
                            id="from"
                            placeholder="Point de départ"
                            autocomplete="off"
                            tabindex="10"
                            value="{{ attribute(stations.stations, from).displayName }}"
                            data-autocomplete-api="{{ path('zeps.api.autocomplete') }}?input={input}" />
                        <button class="search-over-button" id="open-geolocation-icon" title="Me géolocaliser" aria-haspopup="true"></button>
                    </div>
                    <div>
                        <input
                            type="text"
                            name="to"
                            id="to"
                            placeholder="Destination"
                            autocomplete="off"
                            tabindex="20"
                            value="{{ attribute(stations.stations, to).displayName }}"
                            data-autocomplete-api="{{ path('zeps.api.autocomplete') }}?input={input}" />
                        <button class="search-over-button" type="submit" title="Rechercher l'itinéraire" tabindex="30">
                            <span class="fa fa-arrow-right" aria-hidden="true"></span>
                            <span class="sr-only">Rechercher l'itinéraire</span>
                        </button>
                    </div>
                    <button class="invert-from-to" id="invert-from-to" title="Inverser le point de départ et la destination">
                        <span class="fa fa-exchange fa-rotate-90" aria-hidden="true"></span>
                        <span class="sr-only">Inverser le point de départ et la destination</span>
                    </button>
                </form>
                <div id="home-search-form-autocomplete"></div>
                <div id="home-search-form-error" class="alert alert-danger" style="display: none;"></div>
                <div id="home-search-form-loading" style="display: none;">
                    <div class="loading-dot"></div>
                </div>
                <div id="home-search-form-results">
                    {%- if route -%}
                        {% include 'includes/search_results.html.twig' with {'route': route, 'error': error} %}
                    {%- endif -%}
                </div>
                <div id="home-search-form-reduce" aria-hidden="true"{%- if not route -%} class="is-always-hidden"{% endif %}>
                    <span class="icon"><span class="fa fa-angle-double-up"></span></span>
                    <span class="reduce-text" data-text-route-hidden="Afficher l'itinéraire" data-text-route-visible="Afficher la carte">Afficher la carte</span>
                    <span class="icon"><span class="fa fa-angle-double-up"></span></span>
                </div>
            </aside>

            <section
                id="network-map"
                class="network-map section-fullscreen"
                data-api-network="{{ path('zeps.api.stations_network') }}"
                data-api-network-colors="{{ path('zeps.api.stations_network_colors') }}"
                data-path-missing-stations="{{ path('zeps.missing') }}"
                data-permanent-url-with-anchor="yes"
                data-form-from-id="from"
                data-form-to-id="to"
                data-main-stations="{{ main_stations|join(',') }}" {# Should be read from the API, not in the GUI config #}
                data-dynmap-root="{{ app.config.dynmap.root }}"
                data-dynmap-map-overworld="{{ app.config.world_name_overworld }}"
                data-dynmap-map-nether="{{ app.config.world_name_nether }}"
                data-dynmap-map-type="{{ app.config.dynmap.map_type }}"
                {% if route %}data-highlighted-route="{% for step in route.path %}{{ step.station.name }},{% endfor %}"{% endif %}>
                {% if error != 'unreachable' %}
                    <div class="network_map_loader">
                        <h4>Chargement de la carte en cours...</h4>
                        <p class="is-hidden" id="still_nothing_loader">
                            Toujours rien ? Vérifiez que vous n'avez pas perdu votre accès internet entre temps.
                        </p>
                    </div>
                {% endif %}
            </section>

            <div class="modal" tabindex="-1" role="dialog" id="geo-geolocation-modal">
                <div class="modal-background modal-close-handler"></div>
                <div class="modal-content">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title geolocation-modal-title">
                                Chargement...
                            </p>
                        </header>
                        <div class="card-content">
                            <div class="geolocation-modal-main-text geolocation-modal-loading">
                                <img src="{{ app.request.basePath }}/img/loading.gif" alt="Chargement en cours, patientez une seconde..." />
                            </div>

                            <div class="geolocation-modal-main-selector geolocation-modal-selector">
                                <div class="columns is-multiline is-mobile geolocation-modal-selector-list"></div>
                            </div>

                            <div class="geolocation-modal-main-text geolocation-modal-error-nether-empty">
                                <p>
                                    <strong>Il n'y a personne dans un monde survie.</strong><br />
                                    Allez au préalable dans l'un d'entre eux puis <a href="#" class="geolocation-modal-retry">réessayez</a>.
                                </p>
                            </div>

                            <div class="geolocation-modal-main-text geolocation-modal-error-cannot-retrieve">
                                <p>
                                    <strong>Impossible de récupérer la station.</strong><br />
                                    Le serveur a retourné une erreur.
                                </p>
                                <p class="text-muted">
                                    Erreur <span class="geolocation-modal-error-cannot-retrieve-error-id"></span>&nbsp;:
                                    «&nbsp;<span class="geolocation-modal-error-cannot-retrieve-error-message"></span>&nbsp;»
                                </p>
                            </div>

                            <p class="geolocation-modal-footer-message">
                                <a href="#" class="geolocation-modal-retry" title="Cliquez pour réessayer">Pas dans la liste ?</a> Vérifiez que vous êtes dans un monde survie (et hors de l'End).
                            </p>
                        </div>
                        <footer class="card-footer">
                            <a class="card-footer-item geolocation-modal-retry" disabled>Actualiser la liste des connectés</a>
                        </footer>
                    </div>
                </div>
                <button class="modal-close"></button>
            </div>
        </div>
    {% endif %}
{% endblock %}

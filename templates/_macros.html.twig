{% macro stations_list(stations, selected_id, geolocation_enabled, placeholder) %}
    <option value=""{% if geolocation_enabled %} id="starting-point-placeholder"{% endif %} disabled{% if not selected_id %} selected{% endif %}>{{ placeholder }}
    <optgroup label="Stations principales">
        {% for station in stations.main_stations %}
            <option value="{{ station.code_name }}">{{ station.full_name }}</option>
        {% endfor %}
    </optgroup>
    <optgroup label="Toutes les stations">
        {% for station in stations.stations %}
            {% if station.is_visible %}
                <option value="{{ station.code_name }}"{% if selected_id is not same as(false) and selected_id == station.id %} selected{% endif %}>{{ station.full_name }}</option>
            {% endif %}
        {% endfor %}
    </optgroup>
{% endmacro %}
